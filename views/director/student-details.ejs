<link href="/css/style-nav.css" rel="stylesheet">
<link href="/css/style-student-details.css" rel="stylesheet">

<div class="container mt-4">
  <div class="mb-4">
    <a href="/director/dashboard" class="btn back-to-dash-btn">
      <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="custom-rounded-card shadow-sm mb-4">
        <div class="card-body p-4">
          <% if (profile.partnership && profile.partnership.agency) { %>
            <div class="text-center mb-4">
              <div class="mb-3">
                <i class="bi bi-building text-primary" style="font-size: 3rem;"></i>
              </div>
              <h3 class="fw-bold text-dark mb-1">
                <%= profile.partnership.agency %>
              </h3>
              <p class="text-muted mb-3">
                Internship Partner
              </p>
            </div>

            <div class="internship-info">
              <div class="info-item mb-3">
                <label class="text-muted small fw-bold d-block mb-1">
                  <i class="bi bi-geo-alt me-2 text-primary"></i>Location
                </label>
                <p class="mb-0 text-dark">
                  <%= profile.partnership.location %>
                </p>
              </div>

              <% if (profile.partnership.email) { %>
                <div class="info-item mb-3">
                  <label class="text-muted small fw-bold d-block mb-1">
                    <i class="bi bi-envelope me-2 text-primary"></i>Contact Email
                  </label>
                  <p class="mb-0">
                    <a href="mailto:<%= profile.partnership.email %>" class="text-decoration-none">
                      <%= profile.partnership.email %>
                    </a>
                  </p>
                </div>
              <% } %>

              <div class="info-item">
                <label class="text-muted small fw-bold d-block mb-1">
                  <i class="bi bi-calendar-check me-2 text-primary"></i>Applied On
                </label>
                <p class="mb-0 text-dark">
                  <%= new Date(profile.partnership.appliedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                </p>
              </div>
            </div>
          <% } else { %>
            <div class="text-center text-muted py-5">
              <i class="bi bi-building" style="font-size: 3rem; opacity: 0.3;"></i>
              <p class="mt-3">No partnership information available</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>Memorandum of Agreement (MOA)</h5>
        </div>
        <div class="card-body">
          <% const moaDoc=profile.documents.find(doc=> doc.docType === 'moa'); %>
            <% if (moaDoc) { %>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Document</th>
                      <th>Uploaded</th>
                      <th>Status</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>
                        <strong><%= moaDoc.docType.replace(/_/g,' ').toUpperCase() %></strong>
                      </td>
                    <td><%= new Date(moaDoc.uploadDate).toLocaleDateString() %></td>
                    <td>
                      <select class="form-select form-select-sm director-status-select" data-doc-id="<%= moaDoc._id %>">
                        <option value="Processing" <%= moaDoc.status===' Processing' ? 'selected' :'' %>>Processing
                          </option>
                          <option value="Revise" <%=moaDoc.status==='Revise' ? 'selected' :'' %>>Revise</option>
                          <option value="Done" <%=moaDoc.status==='Done' ? 'selected' :'' %>>Done</option>
                          </select>
                      </td>
                      <td>
                        <a href="/director/document/<%= moaDoc._id %>/view" class="btn btn-sm btn-outline-primary"
                          target="_blank"><i class="bi bi-eye me-1"></i>View MOA</a>
                        <button type="button" class="btn btn-sm btn-info ms-1" data-bs-toggle="modal"
                          data-bs-target="#directorCommentsModal" data-doc-id="<%= moaDoc._id %>"
                          data-doc-title="<%= moaDoc.docType.replace(/_/g, ' ').toUpperCase() %>"><i class="bi bi-chat me-1"></i>Comments</button>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <% } else { %>
                <div class="alert alert-warning mb-0">
                  <i class="bi bi-exclamation-triangle me-2"></i>
                  <strong>No MOA Document</strong> - The student has not yet submitted the Memorandum of Agreement document.
                </div>
                <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="directorCommentsModal" tabindex="-1" aria-labelledby="directorModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="directorModalLabel">Comments - <span id="directorDocTitle"></span></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="directorCommentsList" class="mb-4" style="max-height: 300px; overflow-y: auto;">
          <div class="text-center py-3">
            <div class="spinner-border spinner-border-sm" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
          </div>
        </div>
        <form id="directorCommentForm">
          <input type="hidden" id="directorDocumentId" name="documentId">
          <div class="mb-3">
            <label class="form-label">Add Comment</label>
            <textarea class="form-control" name="comment" rows="2" required placeholder="Enter your feedback..."></textarea>
          </div>
          <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Post Comment</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.querySelectorAll('.director-status-select').forEach(select => {
    select.addEventListener('change', async (e) => {
      const docId = e.target.dataset.docId;
      const status = e.target.value;
      try {
        const resp = await fetch(`/director/set-status/${docId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ status })
        });
        if (!resp.ok) throw new Error('Failed to set status');
        e.target.classList.add('bg-success', 'text-white');
        setTimeout(() => e.target.classList.remove('bg-success', 'text-white'), 1000);
      } catch (err) {
        alert('Error setting status: ' + err.message);
      }
    });
  });

  document.getElementById('directorCommentsModal').addEventListener('show.bs.modal', async function (e) {
    const button = e.relatedTarget;
    const docId = button.getAttribute('data-doc-id');
    const docTitle = button.getAttribute('data-doc-title');

    document.getElementById('directorDocumentId').value = docId;
    document.getElementById('directorDocTitle').textContent = docTitle;
    const commentsList = document.getElementById('directorCommentsList');

    try {
      const response = await fetch(`/director/document-comments/${docId}`, {
        method: 'GET',
        headers: { 'Content-Type': 'application/json' }
      });

      if (!response.ok) {
        throw new Error('Failed to fetch comments');
      }

      const data = await response.json();
      const comments = data.comments || [];

      if (comments.length === 0) {
        commentsList.innerHTML = '<p class="text-muted text-center">No comments yet.</p>';
      } else {
        commentsList.innerHTML = comments.map((c, idx) => `
                <div class="bg-light rounded p-3 mb-2 comment-item" data-index="${idx}">
                    <div class="d-flex justify-content-between">
                        <strong>${c.author}</strong>
                        <div class="d-flex gap-2">
                            <small class="text-muted">${new Date(c.createdAt).toLocaleString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: '2-digit' })}</small>
                            <button class="btn btn-sm btn-outline-danger delete-comment-btn" data-doc-id="${docId}" data-index="${idx}" title="Delete comment">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                    <p class="mb-0 mt-2">${c.content}</p>
                </div>
            `).join('');

        document.querySelectorAll('.delete-comment-btn').forEach(btn => {
          btn.addEventListener('click', async () => {
            if (!confirm('Delete this comment?')) return;
            const docId = btn.getAttribute('data-doc-id');
            const idx = btn.getAttribute('data-index');
            try {
              const resp = await fetch(`/director/document-comment/${docId}/${idx}`, {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' }
              });
              if (!resp.ok) {
                const err = await resp.json();
                throw new Error(err.error || 'Failed to delete comment');
              }
              btn.closest('.comment-item').remove();
              alert('Comment deleted');
            } catch (err) {
              alert('Error: ' + err.message);
            }
          });
        });
      }
    } catch (err) {
      console.error('Error fetching comments:', err);
      commentsList.innerHTML = '<p class="text-danger text-center">Error loading comments. Please try again.</p>';
    }

    document.getElementById('directorCommentForm').reset();
  });

  document.getElementById('directorCommentForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const docId = document.getElementById('directorDocumentId').value;
    const comment = document.querySelector('#directorCommentForm textarea[name="comment"]').value;

    if (!comment.trim()) {
      alert('Please enter a comment');
      return;
    }

    try {
      const response = await fetch(`/director/document-comment/${docId}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ comment: comment.trim() })
      });

      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.error || 'Failed to add comment');
      }

      alert('Comment added successfully');
      bootstrap.Modal.getInstance(document.getElementById('directorCommentsModal')).hide();
      setTimeout(() => window.location.reload(), 500);
    } catch (err) {
      alert('Error adding comment: ' + err.message);
    }
  });
</script>