<link href="/css/style-nav.css" rel="stylesheet">
<link href="/css/style-coordinator-dash.css" rel="stylesheet">

<div class="main-container d-flex">
  <div class="sidebar bg-light border-end"
    style="width: 280px; height: 100vh; position: fixed; top: 0; left: 0; overflow-y: auto;">
    <div class="p-3 pb-0 text-center mb-4">
      <div class="mb-3 logogogo">
        <img src="/images/logo-placeholder.png" alt="Logo" class="mx-auto d-block" style="width: 200px; height: auto;">
      </div>

      <div class="user-card">
        <img src="<%= user.profilePicture || '/images/default-avatar.png' %>"
          class="rounded-circle mb-2 mx-auto d-block" style="width: 80px; height: 80px; object-fit: cover;">
        <div><strong>
            <%= user.name || user.email %>
          </strong></div>
        <small class="text-muted">Coordinator</small>

        <div class="account-btns">
          <div class="mt-2">
            <a href="/coordinator/edit-profile" class="btn btn-outline-primary edit-btn">
              <img src="/images/icons/edit-blue.svg" alt="Edit" style="width: 14px; height: auto;">
              <span>Edit</span>
            </a>
          </div>
          <div class="mt-2">
            <a href="#" onclick="handleLogout(event)" class="btn btn-outline-primary edit-btn">
              <img src="/images/icons/door-icon.svg" alt="Edit" style="width: 14px; height: auto;">
              <span>Logout</span>
            </a>
          </div>
        </div>

      </div>
    </div>

    <div class="nav flex-column nav-pills p-3 pt-0" id="coordinatorSidebar" role="tablist" aria-orientation="vertical">
      <a class="nav-link active" id="nav-home-tab" data-bs-toggle="pill" href="#nav-home" role="tab"
        style="width: 100%; text-align: center;">
        <img src="/images/icons/home-icon.svg" alt="Home" style="width: 150px; height: auto;">
        <p>Home</p>
      </a>
      <a class="nav-link" id="nav-review-tab" data-bs-toggle="pill" href="#nav-review" role="tab"
        style="width: 100%; text-align: center;">
        <img src="/images/icons/documents-icon.svg" alt="Documents" style="width: 150px; height: auto;">
        <p>Review submissions</p>
      </a>
      <a class="nav-link" id="nav-applications-tab" data-bs-toggle="pill" href="#nav-applications" role="tab"
        style="width: 100%; text-align: center;">
        <img src="/images/icons/megaphone-icon.svg" alt="Applications" style="width: 150px; height: auto;">
        <p>Applications</p>
      </a>
      <a class="nav-link" id="nav-reports-tab" data-bs-toggle="pill" href="#nav-reports" role="tab"
        style="width: 100%; text-align: center;">
        <img src="/images/icons/reports-icon.svg" alt="Reports" style="width: 150px; height: auto;">
        <p>Reports</p>
      </a>
      <a class="nav-link" id="nav-requests-tab" data-bs-toggle="pill" href="#nav-requests" role="tab"
        style="width: 100%; text-align: center;">
        <img src="/images/icons/confirm-people.svg" alt="Requests" style="width: 150px; height: auto;">
        <p>Account requests</p>
      </a>
      <a class="nav-link" id="nav-coordinators-tab" data-bs-toggle="pill" href="#nav-coordinators" role="tab"
        style="width: 100%; text-align: center;">
        <img src="/images/icons/add-people.svg" alt="Coordinators" style="width: 150px; height: auto;">
        <p>Add coordinators</p>
      </a>
    </div>

  </div>

  <div class="main-content" style="margin-left: 280px; width: calc(100% - 280px); min-height: 100vh;">
    <div class="container py-4">
      <div class="tab-content">

        <!-- Announcements tab -->
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-4 section-title">Your announcements</h4>
          </div>
          <div class="row g-4">
            <div class="col-12">
              <div class="custom-post-card p-4 shadow-sm">
                <form id="announcementForm">
                  <div class="d-flex align-items-start mb-3">
                    <img src="<%= user.profilePicture || '/images/default-avatar.png' %>"
                      class="rounded-circle me-3 border" style="width: 45px; height: 45px; object-fit: cover;">

                    <div class="flex-grow-1">
                      <input type="text" name="title"
                        class="form-control border-0 bg-transparent fw-bold fs-5 ps-0 mb-1"
                        placeholder="Create an announcement title" style="box-shadow: none;">

                      <textarea name="content" class="form-control border-0 bg-transparent ps-0" rows="2"
                        placeholder="Share something with your students..."
                        style="box-shadow: none; resize: none;"></textarea>
                    </div>
                  </div>

                  <div id="previewContainer" class="mt-2 mb-3 position-relative d-none ms-5">
                    <img src="" id="imagePreview" class="img-fluid rounded border" style="max-height: 150px;">
                    <button type="button"
                      class="btn btn-danger btn-sm rounded-circle position-absolute top-0 start-0 m-1"
                      onclick="clearSelectedImage()" style="width: 22px; height: 22px; padding: 0; line-height: 1;">
                      <i class="bi bi-x"></i>
                    </button>
                  </div>

                  <div class="d-flex justify-content-between align-items-center border-top pt-3">
                    <div class="d-flex align-items-center ms-5">
                      <label class="mb-0 d-flex align-items-center gap-2 text-muted" style="cursor: pointer;">
                        <span class="small fw-bold">Attach Photo</span>
                        <i class="bi bi-image text-primary fs-5"></i>
                        <input type="file" name="image" id="announcementImage" class="d-none" accept="image/*"
                          onchange="showPreview(this)">
                      </label>
                    </div>

                    <button type="submit" class="btn btn-primary px-5 fw-bold rounded-3">Post</button>
                  </div>
                </form>
              </div>
            </div>
            <div class="col-12">
              <div class="announcements-list">
                <% if (announcements && announcements.length> 0) { %>
                  <% announcements.forEach(announcement=> { %>
                    <div class="custom-post-card mb-4 px-3 py-2 shadow-sm">
                      <div class="card-header border-0 pt-3">
                        <div class="d-flex justify-content-between align-items-start">
                          <div class="d-flex align-items-center">
                            <img src="<%= announcement.author?.profilePicture || '/images/default-avatar.png' %>"
                              class="rounded-circle me-3" style="width: 42px; height: 42px; object-fit: cover;">
                            <div>
                              <div class="mb-0">
                                <span class="post-author-name">
                                  <%= announcement.author?.name %>
                                </span>
                                <span class="post-author-role text-muted small">Coordinator</span>
                              </div>
                              <small class="text-muted" style="font-size: 0.75rem;">
                                <%= new Date(announcement.createdAt).toLocaleString('en-US', { day: 'numeric' ,
                                  month: 'short' , hour: 'numeric' , minute: '2-digit' }) %>
                              </small>
                            </div>
                          </div>
                          <button class="border-0 bg-transparent p-0 btn-sm delete-announcement"
                            data-id="<%= announcement._id %>" title="Delete announcement">
                            <img src="/images/close.png" alt="Delete" style="width: 14px; height: 14px; opacity: 0.6;">
                          </button>
                        </div>
                      </div>

                      <div class="card-body">
                        <h5 class="card-title">
                          <%= announcement.title %>
                        </h5>
                        <p class="card-text">
                          <%= announcement.content %>
                        </p>

                        <% if (announcement.imageUrl) { %>
                          <div class="text-center">
                            <img src="<%= announcement.imageUrl %>" class="img-fluid rounded mb-3 clickable-image"
                              style="aspect-ratio: 1 / 1; width: 100%; max-width: 400px; object-fit: cover; cursor: pointer;"
                              data-bs-toggle="modal" data-bs-target="#imageModal" onclick="prepareModal(this.src)">
                          </div>
                          <% } %>

                            <div class="border-top pt-3">
                              <button class="btn btn-outline-primary btn-sm mb-3 comment-btn"
                                onclick="toggleComments(this)">
                                <i class="bi bi-chat"></i> Comments (<%= announcement.comments?.length || 0 %>)
                              </button>

                              <div class="comments-section" style="display: none;">
                                <form class="comment-form d-flex gap-2 mb-3"
                                  data-announcement="<%= announcement._id %>">
                                  <img src="<%= user.profilePicture || '/images/default-avatar.png' %>"
                                    class="rounded-circle" style="width: 32px; height: 32px; object-fit: cover;">
                                  <div class="flex-grow-1">
                                    <input type="text" class="form-control rounded-pill"
                                      placeholder="Write a comment...">
                                  </div>
                                  <button type="submit" class="btn btn-primary btn-sm px-3">Post</button>
                                </form>

                                <div class="comments-list">
                                  <% (announcement.comments || []).forEach(comment=> { %>
                                    <div class="d-flex gap-2 mb-2">
                                      <img src="<%= comment.author?.profilePicture || '/images/default-avatar.png' %>"
                                        class="rounded-circle" style="width: 32px; height: 32px; object-fit: cover;">
                                      <div class="bg-light rounded-3 p-2 flex-grow-1">
                                        <div class="fw-bold">
                                          <%= comment.author?.name || comment.author?.email %>
                                        </div>
                                        <p class="mb-1">
                                          <%= comment.content %>
                                        </p>
                                        <small class="text-muted">
                                          <%= new Date(comment.createdAt).toLocaleString('en-US', { year: 'numeric' ,
                                            month: 'short' , day: 'numeric' , hour: 'numeric' , minute: '2-digit' }) %>
                                        </small>
                                      </div>
                                    </div>
                                    <% }) %>
                                </div>
                              </div>
                            </div>
                      </div>
                    </div>
                    <% }) %>
                      <% } %>
              </div>
            </div>
          </div>
        </div>

        <script>
          function showPreview(input) {
            const container = document.getElementById('previewContainer');
            const preview = document.getElementById('imagePreview');

            if (input.files && input.files[0]) {
              const reader = new FileReader();
              reader.onload = function (e) {
                preview.src = e.target.result;
                container.classList.remove('d-none'); // Show the container
              }
              reader.readAsDataURL(input.files[0]);
            }
          }

          function clearSelectedImage() {
            const container = document.getElementById('previewContainer');
            const fileInput = document.getElementById('announcementImage');

            fileInput.value = ""; // This is the key: it resets the actual file selection
            container.classList.add('d-none'); // Hide the container
          }
        </script>

        <!-- Review submissions tab -->
        <div class="tab-pane fade" id="nav-review" role="tabpanel">
          <h4 class="mb-4 section-title">Review submissions</h4>

          <div class="custom-rounded-card shadow-sm mb-4">
            <div class="card-body p-0">
              <div class="p-4 bg-white border-bottom">
                <div class="row g-3">
                  <div class="col-md-4">
                    <label class="form-label small fw-bold text-muted">Filter by Course</label>
                    <select class="form-select" id="courseFilter">
                      <option value="">All Courses</option>
                      <% const courses=[...new Set(activeStudents.map(s=>
                        s.studentProfile?.personalData?.course).filter(Boolean))];
                        courses.forEach(course => { %>
                        <option value="<%= course %>">
                          <%= course %>
                        </option>
                        <% }); %>
                    </select>
                  </div>
                  <div class="col-md-4">
                    <label class="form-label small fw-bold text-muted">Filter by Year & Section</label>
                    <select class="form-select" id="yearSectionFilter">
                      <option value="">All Year & Section</option>
                      <% const yearSections=[...new Set(activeStudents.map(s=>
                        s.studentProfile?.personalData?.yearSection).filter(Boolean))];
                        yearSections.forEach(ys => { %>
                        <option value="<%= ys %>">
                          <%= ys %>
                        </option>
                        <% }); %>
                    </select>
                  </div>
                  <div class="col-md-4">
                    <label class="form-label small fw-bold text-muted">Filter by Status</label>
                    <select class="form-select" id="statusFilter">
                      <option value="">All Status</option>
                      <option value="Completed">Completed</option>
                      <option value="Pending Review">Pending Review</option>
                      <option value="Submitting">Submitting</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="table-responsive">
                <table class="table" id="reviewSubmissionsTable">
                  <thead>
                    <tr>
                      <th>Student ID</th>
                      <th>Name</th>
                      <th>Course</th>
                      <th>Year & Section</th>
                      <th>Documents Status</th>
                      <th>Overall Status</th>
                      <th class="text-end">Actions</th>
                    </tr>
                  </thead>
                  <tbody id="reviewSubmissionsBody">
                    <% activeStudents.forEach(student=> {
                      const profile = student.studentProfile || {};
                      const totalDocs = 9;
                      const submittedDocs = (profile.documents && profile.documents.length) || 0;
                      %>
                      <tr class="student-row" data-course="<%= profile.personalData?.course || '' %>"
                        data-year-section="<%= profile.personalData?.yearSection || '' %>"
                        data-status="<%= profile.overallStatus || 'Pending' %>">
                        <td class="fw-bold">
                          <%= profile.personalData?.studentId || 'N/A' %>
                        </td>
                        <td>
                          <%= profile.personalData?.givenName || 'N/A' %>
                            <%= profile.personalData?.surname || '' %>
                        </td>
                        <td>
                          <%= profile.personalData?.course || 'N/A' %>
                        </td>
                        <td>
                          <%= profile.personalData?.yearSection || 'N/A' %>
                        </td>
                        <td style="min-width: 150px;">
                          <div class="d-flex align-items-center gap-2">
                            <div class="progress flex-grow-1">
                              <div class="progress-bar" role="progressbar"
                                style="width: <%= (submittedDocs/totalDocs * 100) %>%"></div>
                            </div>
                            <small class="text-muted">
                              <%= submittedDocs %>/<%= totalDocs %>
                            </small>
                          </div>
                        </td>
                        <td>
                          <span class="badge rounded-pill bg-<%= 
                                    profile.overallStatus === 'Completed' ? 'success' : 
                                    profile.overallStatus === 'Pending Review' ? 'warning' : 'info' %>">
                            <%= profile.overallStatus || 'Pending' %>
                          </span>
                        </td>
                        <td class="text-end">
                          <a href="/coordinator/student-details/<%= student._id %>"
                            class="btn btn-outline-primary btn-compact">
                            <i class="bi bi-eye"></i> View
                          </a>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>
              <div id="noResultsMessage" class="text-center text-muted py-5" style="display: none;">
                <i class="bi bi-search display-4 mb-3 d-block"></i>
                <p>No students match the selected filters.</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Applications tab -->
        <div class="tab-pane fade" id="nav-applications" role="tabpanel">
          <h4 class="mb-4 section-title">Student application to partners</h4>
          <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
              <small class="text-muted">View student internship partnership applications</small>
            </div>
            <div class="card-body">
              <% const agenciesMap={}; activeStudents.forEach(student=> {
                const partnership = student.studentProfile?.partnership;
                if (partnership && partnership.agency) {
                const agency = partnership.agency;
                if (!agenciesMap[agency]) {
                agenciesMap[agency] = [];
                }
                agenciesMap[agency].push({
                student: student,
                profile: student.studentProfile,
                partnership: partnership
                });
                }
                });
                %>

                <% if (Object.keys(agenciesMap).length===0) { %>
                  <div class="text-center text-muted py-4">
                    <i class="bi bi-inbox display-1 mb-3"></i>
                    <p>No partnership applications yet.</p>
                  </div>
                  <% } else { %>
                    <div class="row g-4">
                      <% Object.entries(agenciesMap).forEach(([agency, students])=> { %>
                        <div class="col-12">
                          <div class="card border-start border-primary border-4">
                            <div class="card-header bg-light">
                              <h5 class="card-title mb-0">
                                <i class="bi bi-building me-2"></i>
                                <%= agency %>
                                  <span class="badge bg-primary float-end">
                                    <%= students.length %> student(s)
                                  </span>
                              </h5>
                            </div>
                            <div class="card-body">
                              <div class="row g-3">
                                <% students.forEach(app=> { %>
                                  <div class="col-md-6">
                                    <div class="card h-100 shadow-sm">
                                      <div class="card-header bg-white border-0 pb-0">
                                        <div class="d-flex align-items-center">
                                          <img
                                            src="<%= app.profile.personalData?.profilePicture || '/images/default-avatar.png' %>"
                                            class="rounded-circle me-3"
                                            style="width: 48px; height: 48px; object-fit: cover;">
                                          <div>
                                            <h6 class="mb-0">
                                              <%= app.profile.personalData?.firstName ||
                                                app.profile.personalData?.givenName %>
                                                <%= app.profile.personalData?.lastName ||
                                                  app.profile.personalData?.surname %>
                                            </h6>
                                            <small class="text-muted">
                                              ID: <%= app.profile.personalData?.studentId %>
                                            </small>
                                          </div>
                                        </div>
                                      </div>
                                      <div class="card-body">
                                        <div class="mb-3">
                                          <label class="text-muted small">Internship Information</label>
                                          <div class="bg-light p-3 rounded">
                                            <p class="mb-2">
                                              <strong>Agency:</strong>
                                              <%= app.partnership.agency %>
                                            </p>
                                            <p class="mb-2">
                                              <strong>Location:</strong>
                                              <%= app.partnership.location %>
                                            </p>
                                            <% if (app.partnership.email) { %>
                                              <p class="mb-0">
                                                <strong>Contact Email:</strong>
                                                <a href="mailto:<%= app.partnership.email %>">
                                                  <%= app.partnership.email %>
                                                </a>
                                              </p>
                                              <% } %>
                                          </div>
                                        </div>
                                        <div class="mb-3">
                                          <label class="text-muted small">Course & Year</label>
                                          <p class="mb-0">
                                            <%= app.profile.personalData?.course %> - <%=
                                                app.profile.personalData?.yearSection %>
                                          </p>
                                        </div>
                                        <div class="mb-3">
                                          <label class="text-muted small">Applied On</label>
                                          <p class="mb-0">
                                            <%= new Date(app.partnership.appliedAt).toLocaleDateString('en-US', {
                                              year: 'numeric' , month: 'short' , day: 'numeric' , hour: 'numeric' ,
                                              minute: '2-digit' }) %>
                                          </p>
                                        </div>
                                        <a href="/coordinator/student-details/<%= app.student._id %>"
                                          class="btn btn-primary btn-sm w-100">
                                          <i class="bi bi-eye me-2"></i> View Full Profile
                                        </a>
                                      </div>
                                    </div>
                                  </div>
                                  <% }) %>
                              </div>
                            </div>
                          </div>
                        </div>
                        <% }) %>
                    </div>
                    <% } %>
            </div>
          </div>
        </div>

        <!-- Account requests tab -->
        <div class="tab-pane fade" id="nav-requests" role="tabpanel">
          <h4 class="mb-4 section-title">Account requests</h4>
          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Student ID</th>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% pendingStudents.forEach(student=> { %>
                      <tr>
                        <td>
                          <%= student.studentProfile?.personalData?.studentId || 'N/A' %>
                        </td>
                        <td>
                          <%= student.studentProfile?.personalData?.firstName %>
                            <%= student.studentProfile?.personalData?.lastName %>
                        </td>
                        <td>
                          <%= student.email %>
                        </td>
                        <td>
                          <button class="btn btn-success btn-sm approve-student"
                            data-id="<%= student._id %>">Approve</button>
                          <button class="btn btn-danger btn-sm reject-student"
                            data-id="<%= student._id %>">Reject</button>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <!-- Add coordinators tab -->
        <div class="tab-pane fade" id="nav-coordinators" role="tabpanel">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>Coordinators</h4>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCoordinatorModal">
              <i class="bi bi-person-plus"></i> Add Coordinator
            </button>
          </div>

          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table" id="coordinatorsTable">
                  <thead>
                    <tr>
                      <th>Email</th>
                      <th>Name</th>
                      <th>Campus</th>
                      <th>Status</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% /* `coordinators` expected to be passed in render; if not present the table will be empty */ %>
                      <% (coordinators || []).forEach(c=> { %>
                        <tr id="coordinator-<%= c._id %>">
                          <td>
                            <%= c.email %>
                          </td>
                          <td>
                            <%= c.name || '-' %>
                          </td>
                          <td>
                            <%= c.campus || 'Not specified' %>
                          </td>
                          <td>
                            <%= c.status || 'active' %>
                          </td>
                          <td>
                            <button class="btn btn-sm btn-danger delete-coordinator" data-id="<%= c._id %>">
                              <i class="bi bi-trash"></i> Delete
                            </button>
                          </td>
                        </tr>
                        <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>

        <!-- Reports Tab -->
        <div class="tab-pane fade" id="nav-reports" role="tabpanel">
          <h4 class="mb-4 section-title">
            <i class="bi bi-bar-chart me-2"></i>Internship Reports & Statistics
          </h4>

          <!-- Overview Statistics -->
          <div class="row g-4 mb-4">
            <div class="col-md-6">
              <div class="card border-0 shadow-sm rounded-3 p-4">
                <div class="d-flex align-items-center">
                  <div class="stat-icon bg-primary bg-opacity-10 rounded-circle p-3 me-3"
                    style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                    <i class="bi bi-building text-primary fs-5"></i>
                  </div>
                  <div>
                    <small class="text-muted d-block">Total Partner Companies</small>
                    <h4 class="mb-0 fw-bold"><%= reportsData.totalCompanies %></h4>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="card border-0 shadow-sm rounded-3 p-4">
                <div class="d-flex align-items-center">
                  <div class="stat-icon bg-success bg-opacity-10 rounded-circle p-3 me-3"
                    style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                    <i class="bi bi-people text-success fs-5"></i>
                  </div>
                  <div>
                    <small class="text-muted d-block">Students Currently Interning</small>
                    <h4 class="mb-0 fw-bold"><%= reportsData.totalStudentsInterning %></h4>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Companies List Section -->
          <div class="card border-0 shadow-sm rounded-3 mb-4">
            <div class="card-header bg-light border-0 p-4">
              <h5 class="mb-0 fw-bold d-flex align-items-center">
                <i class="bi bi-building text-primary me-2"></i>Partner Companies & Student Interns
              </h5>
            </div>
            <div class="card-body p-4">
              <% if (reportsData.companies && reportsData.companies.length > 0) { %>
                <div class="row g-3">
                  <% reportsData.companies.forEach(company => { %>
                    <div class="col-md-6 col-lg-4">
                      <div class="card h-100 border-start border-primary border-4 shadow-sm">
                        <div class="card-body">
                          <h6 class="card-title fw-bold text-primary mb-2">
                            <i class="bi bi-building me-2"></i><%= company.name %>
                          </h6>
                          <p class="text-muted small mb-2">
                            <i class="bi bi-geo-alt me-1"></i><%= company.location %>
                          </p>
                          <div class="d-flex align-items-center justify-content-between bg-light rounded-2 p-3">
                            <div>
                              <small class="text-muted d-block">Students</small>
                              <h6 class="mb-0 fw-bold text-primary"><%= company.studentCount %></h6>
                            </div>
                            <div class="text-end">
                              <small class="text-muted d-block">Interns</small>
                              <i class="bi bi-people text-success fs-5"></i>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                </div>
              <% } else { %>
                <div class="text-center text-muted py-5">
                  <i class="bi bi-inbox display-1 mb-3"></i>
                  <p>No students have applied to partner companies yet.</p>
                </div>
              <% } %>
            </div>
          </div>

          <!-- MOA Status by Year/Section -->
          <div class="card border-0 shadow-sm rounded-3">
            <div class="card-header bg-light border-0 p-4">
              <h5 class="mb-0 fw-bold d-flex align-items-center">
                <i class="bi bi-file-earmark-check text-success me-2"></i>MOA Status by Year & Section
              </h5>
            </div>
            <div class="card-body p-4">
              <% if (reportsData.campusMAOStats && reportsData.campusMAOStats.length > 0) { %>
                <div class="row g-4">
                  <% reportsData.campusMAOStats.forEach(stat => { 
                    const donePercent = stat.total > 0 ? Math.round((stat.done / stat.total) * 100) : 0;
                    const submittedPercent = stat.total > 0 ? Math.round((stat.submitted / stat.total) * 100) : 0;
                  %>
                    <div class="col-md-6 col-lg-4">
                      <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                          <h6 class="card-title fw-bold mb-3">
                            <i class="bi bi-bookmark-star text-warning me-2"></i><%= stat.campus %>
                          </h6>
                          
                          <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                              <small class="text-muted">MOA Completed</small>
                              <span class="badge bg-success"><%= stat.done %>/<%= stat.total %></span>
                            </div>
                            <div class="progress" style="height: 8px;">
                              <div class="progress-bar bg-success" role="progressbar" 
                                style="width: <%= donePercent %>%;" 
                                aria-valuenow="<%= stat.done %>" aria-valuemin="0" aria-valuemax="<%= stat.total %>">
                              </div>
                            </div>
                            <small class="text-muted"><%= donePercent %>% Done</small>
                          </div>

                          <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                              <small class="text-muted">MOA Submitted</small>
                              <span class="badge bg-warning text-dark"><%= stat.submitted %>/<%= stat.total %></span>
                            </div>
                            <div class="progress" style="height: 8px;">
                              <div class="progress-bar bg-warning" role="progressbar" 
                                style="width: <%= submittedPercent %>%;" 
                                aria-valuenow="<%= stat.submitted %>" aria-valuemin="0" aria-valuemax="<%= stat.total %>">
                              </div>
                            </div>
                            <small class="text-muted"><%= submittedPercent %>% Submitted</small>
                          </div>

                          <div class="bg-light rounded-2 p-2 text-center">
                            <small class="text-muted d-block">Total Students</small>
                            <h6 class="mb-0 fw-bold text-primary"><%= stat.total %></h6>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                </div>
              <% } else { %>
                <div class="text-center text-muted py-5">
                  <i class="bi bi-graph-up display-1 mb-3"></i>
                  <p>No MOA data available yet.</p>
                </div>
              <% } %>
            </div>
          </div>

          <!-- Summary Chart -->
          <div class="card border-0 shadow-sm rounded-3 mt-4">
            <div class="card-header bg-light border-0 p-4">
              <h5 class="mb-0 fw-bold d-flex align-items-center">
                <i class="bi bi-pie-chart text-info me-2"></i>Overall MOA Submission Status
              </h5>
            </div>
            <div class="card-body p-4">
              <div class="row g-4">
                <% 
                  let overallDone = 0, overallSubmitted = 0, overallStudents = 0;
                  reportsData.campusMAOStats.forEach(stat => {
                    overallDone += stat.done;
                    overallSubmitted += stat.submitted;
                    overallStudents += stat.total;
                  });
                  const overallDonePercent = overallStudents > 0 ? Math.round((overallDone / overallStudents) * 100) : 0;
                  const overallSubmittedPercent = overallStudents > 0 ? Math.round((overallSubmitted / overallStudents) * 100) : 0;
                  const pendingPercent = 100 - overallDonePercent - overallSubmittedPercent;
                %>
                <div class="col-md-6">
                  <div class="text-center">
                    <div class="mb-3">
                      <canvas id="moaChart"></canvas>
                    </div>
                    <p class="text-muted small">Overall MOA Status Distribution</p>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="list-group list-group-flush">
                    <div class="list-group-item border-0 d-flex justify-content-between align-items-center">
                      <div>
                        <h6 class="mb-1 fw-bold">MOA Completed</h6>
                        <small class="text-muted"><%= overallDone %> out of <%= overallStudents %> students</small>
                      </div>
                      <span class="badge bg-success rounded-pill"><%= overallDonePercent %>%</span>
                    </div>
                    <div class="list-group-item border-0 d-flex justify-content-between align-items-center">
                      <div>
                        <h6 class="mb-1 fw-bold">MOA Submitted</h6>
                        <small class="text-muted"><%= overallSubmitted %> out of <%= overallStudents %> students</small>
                      </div>
                      <span class="badge bg-warning text-dark rounded-pill"><%= overallSubmittedPercent %>%</span>
                    </div>
                    <div class="list-group-item border-0 d-flex justify-content-between align-items-center">
                      <div>
                        <h6 class="mb-1 fw-bold">Pending</h6>
                        <small class="text-muted">Awaiting submission</small>
                      </div>
                      <span class="badge bg-secondary rounded-pill"><%= pendingPercent %>%</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
