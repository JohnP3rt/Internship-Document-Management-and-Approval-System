<div class="d-flex">
  <div class="sidebar bg-light border-end" style="width: 280px; height: 100vh; position: fixed; top: 0; left: 0; overflow-y: auto;">
    <div class="p-3 border-bottom text-center">
      <div class="text-center mb-3">
        <img src="/images/logo-placeholder.png" alt="Logo" style="width: 150px; height: auto;">
      </div>
      <div class="text-center">
        <img src="<%= user.profilePicture || '/images/default-avatar.png' %>" 
             class="rounded-circle mb-2 mx-auto d-block" style="width: 80px; height: 80px; object-fit: cover;">
        <div><strong><%= user.name || user.email %></strong></div>
        <small class="text-muted">Coordinator</small>
      </div>
    </div>

    <div class="nav flex-column nav-pills p-3" id="coordinatorSidebar" role="tablist" aria-orientation="vertical" style="display: flex; flex-direction: column; align-items: center;">
      <a class="nav-link active" id="nav-home-tab" data-bs-toggle="pill" href="#nav-home" role="tab" style="width: 100%; text-align: center;"> 
        <i class="bi bi-house-door"></i> Home
      </a>
      <a class="nav-link" id="nav-review-tab" data-bs-toggle="pill" href="#nav-review" role="tab" style="width: 100%; text-align: center;">
        <i class="bi bi-list-check"></i> Review Submissions
      </a>
      <a class="nav-link" id="nav-applications-tab" data-bs-toggle="pill" href="#nav-applications" role="tab" style="width: 100%; text-align: center;">
        <i class="bi bi-briefcase"></i> Applications
      </a>
      <a class="nav-link" id="nav-requests-tab" data-bs-toggle="pill" href="#nav-requests" role="tab" style="width: 100%; text-align: center;">
        <i class="bi bi-person-plus"></i> Account Requests
      </a>
      <a class="nav-link" id="nav-coordinators-tab" data-bs-toggle="pill" href="#nav-coordinators" role="tab" style="width: 100%; text-align: center;">
        <i class="bi bi-people"></i> Coordinators
      </a>
    </div>
  </div>

  <div class="main-content" style="margin-left: 280px; width: calc(100% - 280px); min-height: 100vh;">
    <div class="container py-4">
      <div class="tab-content">

        <div class="tab-pane fade show active" id="nav-home" role="tabpanel">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>OJT Coordinator Dashboard</h2>
            <div>
              <a href="/coordinator/edit-profile" class="btn btn-outline-primary me-2">
                <i class="bi bi-person-gear"></i> Edit Profile
              </a>
            </div>
          </div>
          <div class="row g-4">
            <div class="col-12">
              <div class="card shadow-sm">
                <div class="card-body">
                  <form id="announcementForm">
                    <div class="d-flex mb-3">
                      <img src="<%= user.profilePicture || '/images/default-avatar.png' %>" 
                           class="rounded-circle me-3" 
                           style="width: 45px; height: 45px; object-fit: cover;">
                      <div class="flex-grow-1">
                        <input type="text" name="title" class="form-control form-control-lg mb-2" 
                               placeholder="What's your announcement title?">
                        <textarea name="content" class="form-control" rows="3" 
                                  placeholder="Share something with your students..."></textarea>
                      </div>
                    </div>
                    <div class="border rounded p-3 mb-3">
                      <div class="d-flex align-items-center">
                        <i class="bi bi-image fs-4 me-2"></i>
                        <label class="mb-0" style="cursor: pointer;">
                          Add Photo
                          <input type="file" name="image" id="announcementImage" 
                                 class="d-none" accept="image/*">
                        </label>
                      </div>
                      <div id="imagePreview" class="mt-2 position-relative" style="display: none;">
                        <img src="" class="img-fluid rounded">
                        <button type="button" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2"
                                onclick="removeImage()">
                          <i class="bi bi-x"></i>
                        </button>
                      </div>
                    </div>
                    <div class="text-end">
                      <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-send me-2"></i> Post
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <div class="col-12">
              <div class="announcements-list">
                <% if (announcements && announcements.length > 0) { %>
                  <% announcements.forEach(announcement => { %>
                    <div class="card shadow-sm mb-4 announcement-card">
                      <div class="card-header bg-white border-0 py-3">
                        <div class="d-flex justify-content-between align-items-start">
                          <div class="d-flex align-items-center">
                            <img src="<%= announcement.author?.profilePicture || '/images/default-avatar.png' %>" 
                                 class="rounded-circle me-3" 
                                 style="width: 48px; height: 48px; object-fit: cover;">
                            <div>
                              <h6 class="mb-0"><%= announcement.author?.name || announcement.author?.email %></h6>
                              <small class="text-muted">
                                <%= new Date(announcement.createdAt).toLocaleString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: '2-digit' }) %>
                              </small>
                            </div>
                          </div>
                          <button class="border-0 bg-transparent p-0 btn-sm delete-announcement" data-id="<%= announcement._id %>" title="Delete announcement">
                            <img src="/images/close.png" alt="Delete" style="width: 16px; height: 16px;">
                          </button>
                        </div>
                      </div>
                      <div class="card-body pt-0">
                        <h5 class="card-title"><%= announcement.title %></h5>
                        <p class="card-text"><%= announcement.content %></p>
                        <% if (announcement.imageUrl) { %>
                          <img src="<%= announcement.imageUrl %>" class="img-fluid rounded mb-3">
                        <% } %>
                        
                        <div class="d-flex gap-2 mt-3 mb-3">
                          <button class="btn btn-outline-primary btn-sm comment-btn" onclick="toggleComments(this)">
                            <i class="bi bi-chat"></i> Comments (<%= announcement.comments?.length || 0 %>)
                          </button>
                        </div>

                        <div class="comments-section" style="display: none;">
                          <hr>
                          <form class="comment-form d-flex gap-2 mb-3" data-announcement="<%= announcement._id %>">
                            <img src="<%= user.profilePicture || '/images/default-avatar.png' %>" 
                                 class="rounded-circle" style="width: 32px; height: 32px; object-fit: cover;">
                            <div class="flex-grow-1">
                              <input type="text" class="form-control rounded-pill" placeholder="Write a comment...">
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm px-3">Post</button>
                          </form>
                          
                          <div class="comments-list">
                            <% (announcement.comments || []).forEach(comment => { %>
                              <div class="d-flex gap-2 mb-2">
                                <img src="<%= comment.author?.profilePicture || '/images/default-avatar.png' %>" 
                                     class="rounded-circle" style="width: 32px; height: 32px; object-fit: cover;">
                                <div class="bg-light rounded-3 p-2 flex-grow-1">
                                  <div class="fw-bold"><%= comment.author?.name || comment.author?.email %></div>
                                  <p class="mb-1"><%= comment.content %></p>
                                  <small class="text-muted">
                                    <%= new Date(comment.createdAt).toLocaleString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: '2-digit' }) %>
                                  </small>
                                </div>
                              </div>
                            <% }) %>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% }) %>
                <% } else { %>
                  <div class="text-center py-5 text-muted">
                    <i class="bi bi-megaphone display-1 mb-3"></i>
                    <h5>No announcements yet</h5>
                    <p>Create your first announcement to get started!</p>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="nav-review" role="tabpanel">
          <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h4>Review Submissions</h4>
              <small class="text-muted">Students with submitted documents</small>
            </div>
            <div class="card-body">
              <div class="row mb-4 g-3">
                <div class="col-md-4">
                  <label class="form-label">Filter by Course</label>
                  <select class="form-select" id="courseFilter">
                    <option value="">All Courses</option>
                    <% 
                      const courses = [...new Set(activeStudents.map(s => s.studentProfile?.personalData?.course).filter(Boolean))];
                      courses.forEach(course => {
                    %>
                      <option value="<%= course %>"><%= course %></option>
                    <% }); %>
                  </select>
                </div>
                <div class="col-md-4">
                  <label class="form-label">Filter by Year & Section</label>
                  <select class="form-select" id="yearSectionFilter">
                    <option value="">All Year & Section</option>
                    <% 
                      const yearSections = [...new Set(activeStudents.map(s => s.studentProfile?.personalData?.yearSection).filter(Boolean))];
                      yearSections.forEach(ys => {
                    %>
                      <option value="<%= ys %>"><%= ys %></option>
                    <% }); %>
                  </select>
                </div>
                <div class="col-md-4">
                  <label class="form-label">Filter by Status</label>
                  <select class="form-select" id="statusFilter">
                    <option value="">All Status</option>
                    <option value="Completed">Completed</option>
                    <option value="Pending Review">Pending Review</option>
                    <option value="Submitting">Submitting</option>
                  </select>
                </div>
              </div>

              <div class="table-responsive">
                <table class="table" id="reviewSubmissionsTable">
                  <thead>
                    <tr>
                      <th>Student ID</th>
                      <th>Name</th>
                      <th>Course</th>
                      <th>Year & Section</th>
                      <th>Documents Status</th>
                      <th>Overall Status</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody id="reviewSubmissionsBody">
                    <% activeStudents.forEach(student => { 
                      const profile = student.studentProfile || {};
                      const totalDocs = 9;
                      const submittedDocs = (profile.documents && profile.documents.length) || 0;
                    %>
                      <tr class="student-row" 
                          data-course="<%= profile.personalData?.course || '' %>"
                          data-year-section="<%= profile.personalData?.yearSection || '' %>"
                          data-status="<%= profile.overallStatus || 'Pending' %>">
                        <td><%= profile.personalData?.studentId || 'N/A' %></td>
                        <td>
                          <%= profile.personalData?.firstName || profile.personalData?.givenName || 'N/A' %>
                          <%= profile.personalData?.lastName || profile.personalData?.surname || '' %>
                        </td>
                        <td><%= profile.personalData?.course || 'N/A' %></td>
                        <td><%= profile.personalData?.yearSection || 'N/A' %></td>
                        <td>
                          <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: <%= (submittedDocs/totalDocs * 100) %>%">
                              <%= submittedDocs %>/<%= totalDocs %>
                            </div>
                          </div>
                        </td>
                        <td>
                          <span class="badge bg-<%= 
                            profile.overallStatus === 'Completed' ? 'success' : 
                            profile.overallStatus === 'Pending Review' ? 'warning' : 'info' %>">
                            <%= profile.overallStatus || 'Pending' %>
                          </span>
                        </td>
                        <td>
                          <a href="/coordinator/student-details/<%= student._id %>" class="btn btn-primary btn-sm">
                            <i class="bi bi-eye"></i> View Details
                          </a>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <div id="noResultsMessage" class="text-center text-muted py-4" style="display: none;">
                <p>No students match the selected filters.</p>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="nav-applications" role="tabpanel">
          <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h4>Student Partnership Applications</h4>
              <small class="text-muted">View student internship partnership applications</small>
            </div>
            <div class="card-body">
              <% 
                const agenciesMap = {};
                activeStudents.forEach(student => {
                  const partnership = student.studentProfile?.partnership;
                  if (partnership && partnership.agency) {
                    const agency = partnership.agency;
                    if (!agenciesMap[agency]) {
                      agenciesMap[agency] = [];
                    }
                    agenciesMap[agency].push({
                      student: student,
                      profile: student.studentProfile,
                      partnership: partnership
                    });
                  }
                });
              %>

              <% if (Object.keys(agenciesMap).length === 0) { %>
                <div class="text-center text-muted py-4">
                  <i class="bi bi-inbox display-1 mb-3"></i>
                  <p>No partnership applications yet.</p>
                </div>
              <% } else { %>
                <div class="row g-4">
                  <% Object.entries(agenciesMap).forEach(([agency, students]) => { %>
                    <div class="col-12">
                      <div class="card border-start border-primary border-4">
                        <div class="card-header bg-light">
                          <h5 class="card-title mb-0">
                            <i class="bi bi-building me-2"></i><%= agency %>
                            <span class="badge bg-primary float-end"><%= students.length %> student(s)</span>
                          </h5>
                        </div>
                        <div class="card-body">
                          <div class="row g-3">
                            <% students.forEach(app => { %>
                              <div class="col-md-6">
                                <div class="card h-100 shadow-sm">
                                  <div class="card-header bg-white border-0 pb-0">
                                    <div class="d-flex align-items-center">
                                      <img src="<%= app.profile.personalData?.profilePicture || '/images/default-avatar.png' %>" 
                                           class="rounded-circle me-3" 
                                           style="width: 48px; height: 48px; object-fit: cover;">
                                      <div>
                                        <h6 class="mb-0">
                                          <%= app.profile.personalData?.firstName || app.profile.personalData?.givenName %>
                                          <%= app.profile.personalData?.lastName || app.profile.personalData?.surname %>
                                        </h6>
                                        <small class="text-muted">
                                          ID: <%= app.profile.personalData?.studentId %>
                                        </small>
                                      </div>
                                    </div>
                                  </div>
                                  <div class="card-body">
                                    <div class="mb-3">
                                      <label class="text-muted small">Internship Information</label>
                                      <div class="bg-light p-3 rounded">
                                        <p class="mb-2">
                                          <strong>Agency:</strong> <%= app.partnership.agency %>
                                        </p>
                                        <p class="mb-2">
                                          <strong>Location:</strong> <%= app.partnership.location %>
                                        </p>
                                        <% if (app.partnership.email) { %>
                                          <p class="mb-0">
                                            <strong>Contact Email:</strong> 
                                            <a href="mailto:<%= app.partnership.email %>"><%= app.partnership.email %></a>
                                          </p>
                                        <% } %>
                                      </div>
                                    </div>
                                    <div class="mb-3">
                                      <label class="text-muted small">Course & Year</label>
                                      <p class="mb-0">
                                        <%= app.profile.personalData?.course %> - <%= app.profile.personalData?.yearSection %>
                                      </p>
                                    </div>
                                    <div class="mb-3">
                                      <label class="text-muted small">Applied On</label>
                                      <p class="mb-0">
                                        <%= new Date(app.partnership.appliedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: '2-digit' }) %>
                                      </p>
                                    </div>
                                    <a href="/coordinator/student-details/<%= app.student._id %>" class="btn btn-primary btn-sm w-100">
                                      <i class="bi bi-eye me-2"></i> View Full Profile
                                    </a>
                                  </div>
                                </div>
                              </div>
                            <% }) %>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% }) %>
                </div>
              <% } %>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="nav-requests" role="tabpanel">
          <div class="card">
            <div class="card-header">
              <h4>Account Requests</h4>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Student ID</th>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% pendingStudents.forEach(student => { %>
                      <tr>
                        <td><%= student.studentProfile?.personalData?.studentId || 'N/A' %></td>
                        <td><%= student.studentProfile?.personalData?.firstName %> <%= student.studentProfile?.personalData?.lastName %></td>
                        <td><%= student.email %></td>
                        <td>
                          <button class="btn btn-success btn-sm approve-student" data-id="<%= student._id %>">Approve</button>
                          <button class="btn btn-danger btn-sm reject-student" data-id="<%= student._id %>">Reject</button>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="nav-coordinators" role="tabpanel">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>Coordinators</h4>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCoordinatorModal">
              <i class="bi bi-person-plus"></i> Add Coordinator
            </button>
          </div>

          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table" id="coordinatorsTable">
                  <thead>
                    <tr>
                      <th>Email</th>
                      <th>Name</th>
                      <th>Status</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% /* `coordinators` expected to be passed in render; if not present the table will be empty */ %>
                    <% (coordinators || []).forEach(c => { %>
                      <tr id="coordinator-<%= c._id %>">
                        <td><%= c.email %></td>
                        <td><%= c.name || '-' %></td>
                        <td><%= c.status || 'active' %></td>
                        <td>
                          <button class="btn btn-sm btn-danger delete-coordinator" data-id="<%= c._id %>">
                            <i class="bi bi-trash"></i> Delete
                          </button>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="addCoordinatorModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add New Coordinator</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="addCoordinatorForm">
          <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input type="text" name="name" class="form-control" required placeholder="Enter coordinator's name">
          </div>
          <div class="mb-3">
            <label class="form-label">Email Address</label>
            <input type="email" name="email" class="form-control" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" name="password" class="form-control" required>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" form="addCoordinatorForm" class="btn btn-primary">Create Account</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.getElementById('announcementForm')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);
    try {
        const response = await fetch('/coordinator/announcement', {
            method: 'POST',
            body: formData
        });
        
        if (!response.ok) {
            const error = await response.json();
            throw new Error(error.message || 'Failed to create announcement');
        }
        
        window.location.reload();
    } catch (err) {
        alert('Error creating announcement: ' + err.message);
    }
  });

  function removeImage() {
    const input = document.getElementById('announcementImage');
    const preview = document.getElementById('imagePreview');
    input.value = '';
    preview.style.display = 'none';
  }

  document.querySelectorAll('.delete-announcement').forEach(button => {
    button.addEventListener('click', async () => {
      if (!confirm('Are you sure you want to delete this announcement?')) return;
      
      const id = button.dataset.id;
      try {
        const response = await fetch(`/coordinator/announcement/${id}`, {
          method: 'DELETE'
        });
        
        if (response.ok) {
          const card = button.closest('.announcement-card');
          card.remove();
          alert('Announcement deleted successfully');
        } else {
          throw new Error('Failed to delete announcement');
        }
      } catch (err) {
        alert('Error deleting announcement: ' + err.message);
      }
    });
  });

  function toggleComments(btn) {
    const commentsSection = btn.closest('.card-body').querySelector('.comments-section');
    if (commentsSection.style.display === 'none') {
      commentsSection.style.display = 'block';
      btn.classList.add('active');
    } else {
      commentsSection.style.display = 'none';
      btn.classList.remove('active');
    }
  }

  document.querySelectorAll('.comment-form').forEach(form => {
    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const input = form.querySelector('input');
        const announcementId = form.dataset.announcement;
        
        if (!input.value.trim()) return;

        try {
            const response = await fetch(`/coordinator/announcement/${announcementId}/comment`, {
                method: 'POST',
                headers: { 
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ content: input.value.trim() })
            });
            
            if (!response.ok) {
                const err = await response.json().catch(()=>({ error: 'Failed to post comment' }));
                throw new Error(err.error || 'Failed to post comment');
            }

            const comment = await response.json();
            const createdAtText = comment.createdAtShort || formatShortTime(comment.createdAt);

            const commentsList = form.nextElementSibling;
            const commentHtml = `
                <div class="d-flex gap-2 mb-2">
                    <img src="${(comment.author && comment.author.profilePicture) || '/images/default-avatar.png'}"
                         class="rounded-circle" style="width:32px;height:32px;object-fit:cover;">
                    <div class="bg-light rounded-3 p-2 flex-grow-1">
                        <div class="fw-bold">${(comment.author && comment.author.name) || (comment.author && comment.author.email) || 'User'}</div>
                        <p class="mb-1">${comment.content}</p>
                        <small class="text-muted">${createdAtText}</small>
                    </div>
                </div>
            `;
            commentsList.insertAdjacentHTML('afterbegin', commentHtml);
            const commentBtn = form.closest('.card-body').querySelector('.comment-btn');
            const currentCount = parseInt(commentBtn.textContent.match(/\d+/)[0]);
            commentBtn.innerHTML = `<i class="bi bi-chat"></i> Comments (${currentCount + 1})`;

            input.value = '';
        } catch (err) {
            alert('Error posting comment: ' + err.message);
        }
    });
  });
  document.getElementById('addCoordinatorForm')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);
    try {
      const response = await fetch('/api/coordinator/create-coordinator', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(Object.fromEntries(formData))
      });
      const result = await response.json();
      if (response.ok) {
        alert('Coordinator account created successfully');
        e.target.reset();
        const modal = bootstrap.Modal.getInstance(document.getElementById('addCoordinatorModal'));
        modal.hide();
        window.location.reload();
      } else {
        alert(result.error || 'Failed to create coordinator account');
      }
    } catch (err) {
      alert('Error creating coordinator account');
    }
  });

  document.querySelectorAll('.delete-coordinator').forEach(btn => {
    btn.addEventListener('click', async () => {
      if (!confirm('Delete this coordinator? This will remove the account.')) return;
      const id = btn.dataset.id;
      try {
        const response = await fetch(`/coordinator/${id}`, {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' }
        });
        if (response.ok) {
          document.getElementById(`coordinator-${id}`)?.remove();
          alert('Coordinator deleted successfully');
        } else {
          const error = await response.json();
          alert(error.error || 'Failed to delete coordinator');
        }
      } catch (err) {
        alert('Error deleting coordinator: ' + err.message);
      }
    });
  });

  document.querySelectorAll('.approve-student').forEach(button => {
    button.addEventListener('click', async (e) => {
      const userId = e.target.dataset.id;
      try {
        const response = await fetch(`/api/coordinator/approve-student/${userId}`, {
          method: 'PUT',
          headers: { 'Authorization': `Bearer ${localStorage.getItem('token')}` }
        });
        if (response.ok) window.location.reload();
      } catch (err) { alert('Error approving student'); }
    });
  });

  document.querySelectorAll('.reject-student').forEach(button => {
    button.addEventListener('click', () => {
      if (confirm('Reject this student account request?')) {
        const row = button.closest('tr');
        row?.remove();
        alert('Account request removed from view. Backend reject may not be implemented.');
      }
    });
  });
  document.getElementById('announcementImage')?.addEventListener('change', function(e) {
    const preview = document.getElementById('imagePreview');
    const img = preview.querySelector('img');
    
    if (this.files && this.files[0]) {
      const reader = new FileReader();
      reader.onload = function(e) {
        img.src = e.target.result;
        preview.style.display = 'block';
      }
      reader.readAsDataURL(this.files[0]);
    } else {
      preview.style.display = 'none';
    }
  });

  document.getElementById('addCoordinatorForm')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);
    try {
      const response = await fetch('/api/coordinator/create-coordinator', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(Object.fromEntries(formData))
      });
      const result = await response.json();
      if (response.ok) {
        alert('Coordinator account created successfully');
        e.target.reset();
        const modal = bootstrap.Modal.getInstance(document.getElementById('addCoordinatorModal'));
        modal.hide();
        window.location.reload();
      } else {
        alert(result.error || 'Failed to create coordinator account');
      }
    } catch (err) {
      alert('Error creating coordinator account');
    }
  });

  function formatShortTime(value) {
    try {
      const d = new Date(value);
      return d.toLocaleString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: '2-digit' });
    } catch (e) {
      return value;
    }
  }

  function applyFilters() {
    const courseFilter = document.getElementById('courseFilter').value;
    const yearSectionFilter = document.getElementById('yearSectionFilter').value;
    const statusFilter = document.getElementById('statusFilter').value;
    
    const rows = document.querySelectorAll('#reviewSubmissionsTable tbody tr.student-row');
    let visibleCount = 0;

    rows.forEach(row => {
      const coursMatch = !courseFilter || row.dataset.course === courseFilter;
      const yearSectionMatch = !yearSectionFilter || row.dataset.yearSection === yearSectionFilter;
      const statusMatch = !statusFilter || row.dataset.status === statusFilter;

      if (coursMatch && yearSectionMatch && statusMatch) {
        row.style.display = '';
        visibleCount++;
      } else {
        row.style.display = 'none';
      }
    });

    const noResultsMessage = document.getElementById('noResultsMessage');
    if (visibleCount === 0) {
      noResultsMessage.style.display = 'block';
    } else {
      noResultsMessage.style.display = 'none';
    }
  }

  document.getElementById('courseFilter').addEventListener('change', applyFilters);
  document.getElementById('yearSectionFilter').addEventListener('change', applyFilters);
  document.getElementById('statusFilter').addEventListener('change', applyFilters);
</script>
