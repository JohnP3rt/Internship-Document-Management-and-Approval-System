<div class="container">
  <!-- Add profile info at the top -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div class="d-flex align-items-center">
      <img src="<%= user.profilePicture || '/images/default-avatar.png' %>" 
           class="rounded-circle me-3" 
           style="width: 50px; height: 50px; object-fit: cover;">
      <div>
        <h2 class="mb-0">OJT Coordinator Dashboard</h2>
        <small class="text-muted"><%= user.name || user.email %></small>
      </div>
    </div>
    <div>
      <a href="/coordinator/edit-profile" class="btn btn-outline-primary me-2">
        <i class="bi bi-person-gear"></i> Edit Profile
      </a>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCoordinatorModal">
        <i class="bi bi-person-plus"></i> Add New Coordinator
      </button>
    </div>
  </div>

  <!-- Add Coordinator Modal -->
  <div class="modal fade" id="addCoordinatorModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add New Coordinator</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="addCoordinatorForm">
            <div class="mb-3">
              <label class="form-label">Email Address</label>
              <input type="email" name="email" class="form-control" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Password</label>
              <input type="password" name="password" class="form-control" required>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" form="addCoordinatorForm" class="btn btn-primary">Create Account</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Announcements Section -->
  <div class="card mb-4">
    <div class="card-header">
      <h4>Manage Announcements</h4>
    </div>
    <div class="card-body">
      <form id="announcementForm" class="mb-4">
        <div class="mb-3">
          <label class="form-label">Title</label>
          <input type="text" name="title" class="form-control" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Content</label>
          <textarea name="content" class="form-control" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Post Announcement</button>
      </form>

      <div class="announcements-list">
        <% if (announcements && announcements.length > 0) { %>
            <% announcements.forEach(announcement => { %>
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <img src="<%= announcement.author.profilePicture || '/images/default-avatar.png' %>" 
                             class="rounded-circle me-2" 
                             style="width: 40px; height: 40px; object-fit: cover;">
                        <div>
                            <h5 class="card-title mb-0"><%= announcement.title %></h5>
                            <small class="text-muted">Posted by <%= announcement.author.name || 'Coordinator' %></small>
                        </div>
                        <button class="btn btn-sm btn-danger delete-announcement ms-auto" 
                                data-id="<%= announcement._id %>">Delete</button>
                    </div>
                    <p class="card-text"><%= announcement.content %></p>
                    <small class="text-muted">
                        Posted on <%= new Date(announcement.createdAt).toLocaleString() %>
                    </small>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <p class="text-muted">No announcements yet.</p>
    <% } %>
      </div>
    </div>
  </div>

  <!-- Pending Students Section -->
  <div class="card mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Student ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% pendingStudents.forEach(student => { %>
              <tr>
                <td><%= student.studentProfile?.personalData?.studentId %></td>
                <td><%= student.studentProfile?.personalData.firstName %> <%= student.studentProfile?.personalData.lastName %></td>
                <td><%= student.email %></td>
                <td>
                  <button class="btn btn-success btn-sm approve-student" data-id="<%= student._id %>">Approve</button>
                  <button class="btn btn-danger btn-sm reject-student" data-id="<%= student._id %>">Reject</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Active Students Section -->
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h4>Active Students</h4>
      <div class="btn-group">
        <button class="btn btn-outline-primary" data-status="all">All</button>
        <button class="btn btn-outline-primary" data-status="Submitting">Submitting</button>
        <button class="btn btn-outline-primary" data-status="Pending Review">Pending Review</button>
        <button class="btn btn-outline-primary" data-status="Completed">Completed</button>
      </div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table" id="activeStudentsTable">
          <thead>
            <tr>
              <th>Student ID</th>
              <th>Name</th>
              <th>Course</th>
              <th>Documents Status</th>
              <th>Overall Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% activeStudents.forEach(student => { 
              const profile = student.studentProfile;
              const totalDocs = 9; // Total required documents
              const submittedDocs = profile?.documents?.length || 0;
            %>
              <tr>
                <td>
                  <% if (student.studentProfile && student.studentProfile.personalData) { %>
                    <%= student.studentProfile.personalData.studentId || 'N/A' %>
                  <% } else { %>
                    N/A
                  <% } %>
                </td>
                <td>
                  <%= profile?.personalData?.firstName || profile?.personalData?.givenName || 'N/A' %>
                  <%= profile?.personalData?.lastName || profile?.personalData?.surname || 'N/A' %>
                </td>
                <td><%= profile?.personalData?.course || 'N/A' %></td>
                <td>
                  <div class="progress">
                    <div class="progress-bar" role="progressbar" 
                         style="width: <%= (submittedDocs/totalDocs * 100) %>%">
                      <%= submittedDocs %>/<%= totalDocs %>
                    </div>
                  </div>
                </td>
                <td>
                  <span class="badge bg-<%= 
                    profile?.overallStatus === 'Completed' ? 'success' : 
                    profile?.overallStatus === 'Pending Review' ? 'warning' : 'info' %>">
                    <%= profile?.overallStatus || 'Pending' %>
                  </span>
                </td>
                <td>
                  <a href="/coordinator/student-details/<%= student._id %>" 
                     class="btn btn-primary btn-sm">
                    <i class="bi bi-eye"></i> View Details
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
// Add this to handle coordinator creation
document.getElementById('addCoordinatorForm')?.addEventListener('submit', async (e) => {
  e.preventDefault();
  const formData = new FormData(e.target);
  try {
    const response = await fetch('/api/coordinator/create-coordinator', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(Object.fromEntries(formData))
    });
    
    const result = await response.json();
    if (response.ok) {
      alert('Coordinator account created successfully');
      e.target.reset();
      // Close the modal
      const modal = bootstrap.Modal.getInstance(document.getElementById('addCoordinatorModal'));
      modal.hide();
    } else {
      alert(result.error || 'Failed to create coordinator account');
    }
  } catch (err) {
    alert('Error creating coordinator account');
  }
});

// Add status filter functionality
document.querySelectorAll('[data-status]').forEach(btn => {
  btn.addEventListener('click', () => {
    const status = btn.dataset.status;
    const rows = document.querySelectorAll('#activeStudentsTable tbody tr');
    
    rows.forEach(row => {
      const rowStatus = row.querySelector('.badge').textContent.trim();
      if (status === 'all' || rowStatus === status) {
        row.style.display = '';
      } else {
        row.style.display = 'none';
      }
    });
  });
});

// Add this to handle announcement creation and deletion
document.getElementById('announcementForm')?.addEventListener('submit', async (e) => {
  e.preventDefault();
  const formData = new FormData(e.target);
  try {
    const response = await fetch('/api/coordinator/announcement', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Authorization': `Bearer ${localStorage.getItem('token')}`
      },
      body: JSON.stringify(Object.fromEntries(formData))
    });
    if (response.ok) {
      window.location.reload();
    }
  } catch (err) {
    alert('Error creating announcement');
  }
});

document.querySelectorAll('.delete-announcement').forEach(button => {
  button.addEventListener('click', async () => {
    if (confirm('Are you sure you want to delete this announcement?')) {
      const id = button.dataset.id;
      try {
        const response = await fetch(`/api/coordinator/announcement/${id}`, {
          method: 'DELETE',
          headers: {
            'Authorization': `Bearer ${localStorage.getItem('token')}`
          }
        });
        if (response.ok) {
          window.location.reload();
        }
      } catch (err) {
        alert('Error deleting announcement');
      }
    }
  });
});
</script>
