<div class="container">
  <div class="mb-4">
    <a href="/coordinator/dashboard" class="btn btn-outline-primary">
      <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
  </div>

  <div class="row">
    <!-- Student Info -->
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <div class="text-center mb-3">
            <img src="<%= student.studentProfile.personalData.profilePicture || '/images/default-avatar.png' %>" 
                 class="rounded-circle profile-picture" alt="Profile Picture">
          </div>
          <h4 class="text-center mb-3">
            <%= student.studentProfile.personalData.givenName %> 
            <%= student.studentProfile.personalData.surname %>
          </h4>
          <hr>
          <div class="mb-2"><strong>Student ID:</strong> <%= student.studentProfile.personalData.studentId %></div>
          <div class="mb-2"><strong>Course:</strong> <%= student.studentProfile.personalData.course %></div>
          <div class="mb-2"><strong>Year & Section:</strong> <%= student.studentProfile.personalData.yearSection %></div>
          <div class="mb-2"><strong>Contact:</strong> <%= student.studentProfile.personalData.contactNumber %></div>
          <div class="mb-2"><strong>Email:</strong> <%= student.email %></div>
        </div>
      </div>
    </div>

    <!-- Documents List -->
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4>Submitted Documents</h4>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Document Type</th>
                  <th>Submitted Date</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% student.studentProfile.documents.forEach(doc => { %>
                  <tr>
                    <td><%= doc.docType.replace(/_/g, ' ').toUpperCase() %></td>
                    <td><%= new Date(doc.uploadDate).toLocaleDateString() %></td>
                    <td>
                      <select class="form-select form-select-sm status-select" 
                              data-doc-id="<%= doc._id %>"
                              style="width: 140px">
                        <option value="Submitted" <%= doc.status === 'Submitted' ? 'selected' : '' %>>Submitted</option>
                        <option value="Checked" <%= doc.status === 'Checked' ? 'selected' : '' %>>Checked</option>
                        <option value="For Revision" <%= doc.status === 'For Revision' ? 'selected' : '' %>>For Revision</option>
                        <option value="Done" <%= doc.status === 'Done' ? 'selected' : '' %>>Done</option>
                      </select>
                    </td>
                    <td>
                      <a href="<%= doc.fileUrl %>" class="btn btn-sm btn-primary" target="_blank">
                        <i class="bi bi-file-earmark-text"></i> View File
                      </a>
                      <button class="btn btn-sm btn-info" onclick="addComment('<%= doc._id %>')">
                        <i class="bi bi-chat"></i> Comment
                      </button>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Comment Modal -->
<div class="modal fade" id="commentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Comment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="commentForm">
                    <input type="hidden" id="documentId" name="documentId">
                    <div class="mb-3">
                        <label class="form-label">Comment</label>
                        <textarea class="form-control" name="comment" rows="3" required></textarea>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Comment</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
// Add document status update handler
document.querySelectorAll('.status-select').forEach(select => {
    select.addEventListener('change', async (e) => {
        try {
            const response = await fetch(`/api/coordinator/document-status/${e.target.dataset.docId}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ status: e.target.value })
            });
            
            if (!response.ok) throw new Error('Failed to update status');
            
            // Show success feedback
            e.target.classList.add('bg-success', 'text-white');
            setTimeout(() => e.target.classList.remove('bg-success', 'text-white'), 1000);
        } catch (err) {
            alert('Error updating document status');
            e.target.value = e.target.getAttribute('data-original');
        }
    });
});

// Add comment functionality
function addComment(docId) {
    document.getElementById('documentId').value = docId;
    new bootstrap.Modal(document.getElementById('commentModal')).show();
}

document.getElementById('commentForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);
    const docId = formData.get('documentId');
    const comment = formData.get('comment');

    try {
        const response = await fetch(`/coordinator/document-comment/${docId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ comment })
        });

        if (!response.ok) {
            const error = await response.json();
            throw new Error(error.error || 'Failed to add comment');
        }

        // Success - close modal and refresh page
        bootstrap.Modal.getInstance(document.getElementById('commentModal')).hide();
        window.location.reload();
    } catch (err) {
        alert('Error adding comment: ' + err.message);
    }
});
</script>
