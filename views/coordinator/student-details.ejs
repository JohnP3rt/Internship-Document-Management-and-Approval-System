<link href="/css/style-nav.css" rel="stylesheet">
<link href="/css/style-student-details.css" rel="stylesheet">

<div class="container py-4 main-container">
  <div class="mb-4">
    <a href="/coordinator/dashboard" class="btn back-to-dash-btn">
      <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="custom-rounded-card shadow-sm mb-4">
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-start mb-4">
            <div class="flex-grow-1">
              <h2 class="fw-bold text-dark mb-3">
                <%= student.studentProfile.personalData.givenName %>
                  <%= student.studentProfile.personalData.surname %>
              </h2>

              <div class="profile-info-list">
                <div class="mb-2 text-muted small">
                  <i class="bi bi-person-badge me-2"></i> Student ID: <%= student.studentProfile.personalData.studentId
                    %>
                </div>
                <div class="mb-2 text-muted small">
                  <i class="bi bi-book me-2"></i>
                  <%= student.studentProfile.personalData.course %> (<%= student.studentProfile.personalData.yearSection
                      %>)
                </div>
                <div class="mb-2 text-muted small">
                  <i class="bi bi-telephone me-2"></i>
                  <%= student.studentProfile.personalData.contactNumber %>
                </div>
                <div class="mb-0 text-muted small text-break">
                  <i class="bi bi-envelope me-2"></i>
                  <%= student.email %>
                </div>
              </div>
            </div>

            <div class="ms-3">
              <img src="<%= student.studentProfile.personalData.profilePicture || '/images/default-avatar.png' %>"
                class="rounded-circle border shadow-sm" style="width: 100px; height: 100px; object-fit: cover;">
            </div>
          </div>

          <% if (student.studentProfile.partnership && student.studentProfile.partnership.agency) { %>
            <div class="pt-3 border-top">
              <label class="text-primary fw-bold small mb-2 d-block">Internship</label>
              <div class="bg-white rounded-3 p-3 border">
                <p class="mb-1 fw-bold small"><i class="bi bi-building me-2"></i>
                  <%= student.studentProfile.partnership.agency %>
                </p>
                <p class="mb-1 text-muted small"><i class="bi bi-geo-alt me-2"></i>
                  <%= student.studentProfile.partnership.location %>
                </p>
                <% if (student.studentProfile.partnership.email) { %>
                  <p class="mb-0 small">
                    <i class="bi bi-envelope-at me-2"></i><a
                      href="mailto:<%= student.studentProfile.partnership.email %>" class="text-decoration-none">
                      <%= student.studentProfile.partnership.email %>
                    </a>
                  </p>
                  <% } %>
              </div>
            </div>
            <% } %>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="custom-rounded-card shadow-sm">
        <div class="px-4 py-3 border-bottom" style="background-color: #e8eff6;">
          <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-file-earmark-text me-2"></i>Submitted Documents</h5>
        </div>

        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead>
                <tr>
                  <th class="ps-4">Document Type</th>
                  <th>Submitted Date</th>
                  <th>Status</th>
                  <th class="text-end pe-4">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% student.studentProfile.documents.forEach(doc=> { %>
                  <tr>
                    <td class="ps-4 fw-medium text-dark">
                      <%= doc.docType.replace(/_/g, ' ' ).toUpperCase() %>
                    </td>
                    <td class="text-muted small">
                      <%= new Date(doc.uploadDate).toLocaleDateString('en-US', { month: 'short' , day: 'numeric' ,
                        year: 'numeric' }) %>
                    </td>
                    <td>
                      <select class="form-select form-select-sm status-select rounded-pill border-primary-subtle"
                        data-doc-id="<%= doc._id %>" style="width: 135px; font-size: 0.8rem; height: 30px;">
                        <option value="Submitted" <%=doc.status==='Submitted' ? 'selected' : '' %>>Submitted</option>
                        <option value="Checked" <%=doc.status==='Checked' ? 'selected' : '' %>>Checked</option>
                        <option value="For Revision" <%=doc.status==='For Revision' ? 'selected' : '' %>>For Revision
                        </option>
                        <option value="Done" <%=doc.status==='Done' ? 'selected' : '' %>>Done</option>
                      </select>
                    </td>
                    <td class="text-end pe-4">
                      <div class="d-flex justify-content-end gap-2">
                        <a href="<%= doc.fileUrl %>" class="btn btn-outline-primary btn-compact py-1" target="_blank"
                          title="View Document">
                          <i class="bi bi-eye"></i> View
                        </a>
                        <button type="button" class="btn btn-outline-info btn-compact py-1" data-bs-toggle="modal"
                          data-bs-target="#coordinatorCommentsModal" data-doc-id="<%= doc._id %>"
                          data-doc-title="<%= doc.docType.replace(/_/g, ' ').toUpperCase() %>" title="Comments">
                          <i class="bi bi-chat-dots"></i>
                        </button>
                      </div>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="coordinatorCommentsModal" tabindex="-1" aria-labelledby="coordinatorModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-md modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
      <div class="modal-header border-bottom-0 py-3" style="background-color: #e8eff6;">
        <h5 class="modal-title fw-bold text-dark" id="coordinatorModalLabel">
          <i class="bi bi-chat-left-text me-2 text-primary"></i> <span id="coordinatorDocTitle"></span>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body p-4 bg-white">
        <div id="coordinatorCommentsList" class="mb-4 custom-scrollbar" style="max-height: 350px; overflow-y: auto;">
          <div class="text-center py-5">
            <div class="spinner-border text-primary spinner-border-sm" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
          </div>
        </div>

        <div class="pt-3 border-top">
          <form id="coordinatorCommentForm">
            <input type="hidden" id="coordinatorDocumentId" name="documentId">
            <div class="mb-3 bg-light rounded-3 p-2 border">
              <textarea class="form-control border-0 bg-transparent shadow-none" name="comment" rows="2" required
                placeholder="Write a feedback or instruction..." style="resize: none; font-size: 0.9rem;"></textarea>
            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm btn-sm">
                <i class="bi bi-send-fill me-2"></i> Post Comment
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<script>
  document.querySelectorAll('.status-select').forEach(select => {
    select.addEventListener('change', async (e) => {
      try {
        const response = await fetch(`/api/coordinator/document-status/${e.target.dataset.docId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ status: e.target.value })
        });
        if (!response.ok) throw new Error('Failed to update status');
        e.target.classList.add('bg-success', 'text-white');
        setTimeout(() => e.target.classList.remove('bg-success', 'text-white'), 1000);
      } catch (err) {
        alert('Error updating document status: ' + err.message);
      }
    });
  });

  document.getElementById('coordinatorCommentsModal').addEventListener('show.bs.modal', async function (e) {
    const button = e.relatedTarget;
    const docId = button.getAttribute('data-doc-id');
    const docTitle = button.getAttribute('data-doc-title');

    document.getElementById('coordinatorDocumentId').value = docId;
    document.getElementById('coordinatorDocTitle').textContent = docTitle;
    const commentsList = document.getElementById('coordinatorCommentsList');

    try {
      const response = await fetch(`/coordinator/document-comments/${docId}`, {
        method: 'GET',
        headers: { 'Content-Type': 'application/json' }
      });

      if (!response.ok) {
        throw new Error('Failed to fetch comments');
      }

      const data = await response.json();
      const comments = data.comments || [];

      if (comments.length === 0) {
        commentsList.innerHTML = '<p class="text-muted text-center">No comments yet.</p>';
      } else {
        commentsList.innerHTML = comments.map((c, idx) => `
                <div class="bg-light rounded p-3 mb-2 comment-item" data-index="${idx}">
                    <div class="d-flex justify-content-between">
                        <strong>${c.author}</strong>
                        <div class="d-flex gap-2">
                            <small class="text-muted">${new Date(c.createdAt).toLocaleString('en-US', { year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: '2-digit' })}</small>
                            <button class="btn btn-sm btn-outline-danger delete-comment-btn" data-doc-id="${docId}" data-index="${idx}" title="Delete comment">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                    <p class="mb-0 mt-2">${c.content}</p>
                </div>
            `).join('');

        document.querySelectorAll('.delete-comment-btn').forEach(btn => {
          btn.addEventListener('click', async () => {
            if (!confirm('Delete this comment?')) return;
            const docId = btn.getAttribute('data-doc-id');
            const idx = btn.getAttribute('data-index');
            try {
              const resp = await fetch(`/coordinator/document-comment/${docId}/${idx}`, {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' }
              });
              if (!resp.ok) {
                const err = await resp.json();
                throw new Error(err.error || 'Failed to delete comment');
              }
              btn.closest('.comment-item').remove();
              alert('Comment deleted');
            } catch (err) {
              alert('Error: ' + err.message);
            }
          });
        });
      }
    } catch (err) {
      console.error('Error fetching comments:', err);
      commentsList.innerHTML = '<p class="text-danger text-center">Error loading comments. Please try again.</p>';
    }

    document.getElementById('coordinatorCommentForm').reset();
  });

  document.getElementById('coordinatorCommentForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const docId = document.getElementById('coordinatorDocumentId').value;
    const comment = document.querySelector('#coordinatorCommentForm textarea[name="comment"]').value;

    if (!comment.trim()) {
      alert('Please enter a comment');
      return;
    }

    try {
      const response = await fetch(`/coordinator/document-comment/${docId}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ comment: comment.trim() })
      });

      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.error || 'Failed to add comment');
      }

      alert('Comment added successfully');
      bootstrap.Modal.getInstance(document.getElementById('coordinatorCommentsModal')).hide();
      setTimeout(() => window.location.reload(), 500);
    } catch (err) {
      alert('Error adding comment: ' + err.message);
    }
  });
</script>