<link href="/css/style-nav.css" rel="stylesheet">
<link href="/css/style-edit-profile.css" rel="stylesheet">

<div class="row justify-content-center main-container">
    <div class="col-md-9 col-lg-8">
        <div class="custom-rounded-card shadow-sm mb-5">
            <div class="card-body p-4 p-md-5">
                <h3 class="section-title mb-4 text-dark fw-bold">Edit Profile</h3>

                <form action="/student/edit-profile" method="POST" enctype="multipart/form-data">

                    <div class="bg-white rounded-4 p-4 text-center border mb-4 shadow-sm">
                        <div class="position-relative d-inline-block">
                            <img src="<%= profile.personalData.profilePicture || '/images/default-avatar.png' %>"
                                class="rounded-circle border shadow-sm"
                                style="width: 140px; height: 140px; object-fit: cover;" id="profilePreview">

                            <label for="profilePictureInput"
                                class="btn btn-primary rounded-circle position-absolute bottom-0 end-0 p-0 d-flex align-items-center justify-content-center shadow"
                                style="width: 40px; height: 40px; border: 3px solid white; cursor: pointer;">
                                <i class="bi bi-camera-fill"></i>
                            </label>
                            <input type="file" name="profilePicture" id="profilePictureInput"
                                accept="image/jpeg,image/png" class="d-none" onchange="previewImage(this)">
                        </div>
                        <div class="mt-3">
                            <h6 class="mb-0 fw-bold">Profile Photo</h6>
                            <small class="text-muted">JPG or PNG, max 10MB</small>
                        </div>
                    </div>

                    <div class="bg-white rounded-3 p-4 border mb-4 shadow-xs">
                        <h6 class="text-primary fw-bold mb-4 border-bottom pb-2">
                            <i class="bi bi-person-circle me-2"></i>Personal Information
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-muted">Surname</label>
                                <input type="text" name="surname" class="form-control rounded-3"
                                    value="<%= profile.personalData.surname %>" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-muted">Given Name</label>
                                <input type="text" name="givenName" class="form-control rounded-3"
                                    value="<%= profile.personalData.givenName %>" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-muted">Middle Name</label>
                                <input type="text" name="middleName" class="form-control rounded-3"
                                    value="<%= profile.personalData.middleName %>">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-muted">Date of Birth</label>
                                <input type="date" name="dateOfBirth" class="form-control rounded-3"
                                    value="<%= profile.personalData.dateOfBirth?.toISOString().split('T')[0] %>"
                                    required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-muted">Civil Status</label>
                                <select name="civilStatus" class="form-select rounded-3" required>
                                    <% ['Single', 'Married' , 'Widowed' , 'Separated' ].forEach(status=> { %>
                                        <option value="<%= status %>" <%=profile.personalData.civilStatus===status
                                            ? 'selected' : '' %>><%= status %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-muted">Sex</label>
                                <select name="sex" class="form-select rounded-3" required>
                                    <% ['Male', 'Female' ].forEach(sex=> { %>
                                        <option value="<%= sex %>" <%=profile.personalData.sex===sex ? 'selected' : ''
                                            %>><%= sex %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white rounded-3 p-4 border mb-4 shadow-xs">
                        <h6 class="text-primary fw-bold mb-4 border-bottom pb-2">
                            <i class="bi bi-mortarboard-fill me-2"></i>Academic & Contact
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label small fw-bold text-muted">Course</label>
                                <input type="text" name="course" class="form-control rounded-3"
                                    value="<%= profile.personalData.course %>" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label small fw-bold text-muted">Major</label>
                                <input type="text" name="major" class="form-control rounded-3"
                                    value="<%= profile.personalData.major %>">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label small fw-bold text-muted">Year & Section</label>
                                <input type="text" name="yearSection" class="form-control" 
                                    value="<%= profile.personalData.yearSection || '' %>" placeholder="e.g., 4th Year - A">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label small fw-bold text-muted">Campus</label>
                                <select name="campus" class="form-select rounded-3">
                                    <option value="">Select Campus</option>
                                    <option value="Urdaneta" <%= profile.personalData.campus === 'Urdaneta' ? 'selected' : '' %>>Urdaneta</option>
                                    <option value="Lingayen" <%= profile.personalData.campus === 'Lingayen' ? 'selected' : '' %>>Lingayen</option>
                                    <option value="Asingan" <%= profile.personalData.campus === 'Asingan' ? 'selected' : '' %>>Asingan</option>
                                    <option value="Santa Maria" <%= profile.personalData.campus === 'Santa Maria' ? 'selected' : '' %>>Santa Maria</option>
                                    <option value="San Carlos" <%= profile.personalData.campus === 'San Carlos' ? 'selected' : '' %>>San Carlos</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-muted">Contact Number</label>
                                <input type="text" name="contactNumber" class="form-control rounded-3"
                                    value="<%= profile.personalData.contactNumber %>" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small fw-bold text-muted">Parent/Guardian Name</label>
                                <input type="text" name="guardianName" class="form-control rounded-3"
                                    value="<%= profile.personalData.guardianName %>" required>
                            </div>
                        </div>
                    </div>

                    <div class="bg-white rounded-3 p-4 border mb-4 shadow-xs">
                        <h6 class="text-primary fw-bold mb-4 border-bottom pb-2">
                            <i class="bi bi-geo-alt-fill me-2"></i>Addresses
                        </h6>
                        <div class="mb-3">
                            <label class="form-label small fw-bold text-muted">Home Address</label>
                            <textarea name="homeAddress" class="form-control rounded-3" rows="2"
                                required><%= profile.personalData.homeAddress %></textarea>
                        </div>
                        <div class="mb-0">
                            <label class="form-label small fw-bold text-muted">Current Address</label>
                            <textarea name="currentAddress" class="form-control rounded-3" rows="2"
                                required><%= profile.personalData.currentAddress %></textarea>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-5">
                        <a href="/student/dashboard" class="btn btn-light rounded-pill px-4 fw-bold border">Cancel</a>
                        <button type="submit" class="btn btn-primary rounded-pill px-5 fw-bold shadow-sm">
                            <i class="bi bi-check-lg me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            // Check file size
            const fileSize = input.files[0].size / 1024 / 1024; // in MB
            if (fileSize > 10) {
                alert('File size exceeds 10MB. Please choose a smaller file.');
                input.value = '';
                return;
            }

            const reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById('profilePreview').src = e.target.result;
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>